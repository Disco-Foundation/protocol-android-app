<resources>

    <!-- Main styles -->
    <style name="ToolbarTitle">
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/beon</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/background</item>
        <item name="android:padding">0dp</item>
        <item name="android:clickable">false</item>
        <item name="android:longClickable">true</item>
    </style>

    <style name="PrimaryButtonText">
        <item name="android:fontFamily">@font/beon</item>
        <item name="android:gravity">center</item>
        <item name="android:text">BUTTON TEXT</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InfoText">
        <item name="android:fontFamily">@font/baloo_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ImportantInfoText">
        <item name="android:fontFamily">@font/baloo_regular</item>
        <item name="android:textColor">@color/neon_gold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="InfoTextSmall">
        <item name="android:fontFamily">@font/baloo_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleText">
        <item name="android:fontFamily">@font/baloo_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BigTitleText">
        <item name="android:fontFamily">@font/baloo_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
    </style>

</resources>