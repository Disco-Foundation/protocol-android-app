<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.common.ReadNFCFragment">

    <disco.foundation.discoprotocol.components.CustomToolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--<foundationion.discoprotocol.components.TicketHeader
            android:id="@+id/ticket_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:visibility="gone"
            app:ticketHeaderColor="@color/neon_blue"
            app:ticketHeaderTitle="VIP Gold Ticket"
            app:ticketHeaderSubtitle="# 000001"/> -->

        <ImageView
            android:id="@+id/nfc_image_view"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            tools:ignore="ContentDescription" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <disco.foundation.discoprotocol.components.TextBox
            android:id="@+id/nfc_text_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentText="@string/approach_wearable"
            app:shadowColor="@color/neon_blue">

        </disco.foundation.discoprotocol.components.TextBox>

    </LinearLayout>

</FrameLayout>